{
    "name": "ripe-components-vue",
    "version": "0.6.8",
    "description": "RIPE Components for Vue.js",
    "keywords": [
        "components",
        "ripe",
        "vue"
    ],
    "homepage": "https://github.com/ripe-tech/ripe-components-vue#readme",
    "bugs": {
        "url": "https://github.com/ripe-tech/ripe-components-vue/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ripe-tech/ripe-components-vue.git"
    },
    "license": "Apache-2.0",
    "author": "Platforme",
    "files": [
        "index.js",
        "LICENSE",
        "css/**/*.scss",
        "dist/**/*",
        "js/**/*.js",
        "res/**/*.ico",
        "res/**/*.png",
        "test/**/*.js",
        "vue/**/*.js",
        "vue/**/*.vue"
    ],
    "main": "dist/ripe-components-vue.min.js",
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js",
        "build-dev": "cross-env NODE_ENV=development webpack --mode development --config webpack.config.js",
        "build-lib": "cross-env NODE_ENV=production webpack --mode production --config webpack-lib.config.js",
        "build-storybook": "build-storybook -c .storybook -o storybook",
        "dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.js --mode development --watch --hot",
        "lint": "eslint \"./**/*.{js,vue}\"",
        "lint-all": "npm run lint && npm run stylelint",
        "lint-fix": "eslint \"./**/*.{js,vue}\" --fix",
        "now-build": "npm run build && npm run build-storybook",
        "prettier": "prettier \"./**/*.{js,vue,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix && npm run stylelint-fix && npm run svgo",
        "storybook": "start-storybook -p 9001 -c .storybook",
        "stylelint": "stylelint \"./**/*.{css,scss,vue}\"",
        "stylelint-fix": "stylelint \"./**/*.{css,scss,vue}\" --fix",
        "svgo": "svgo -r . --disable='removeDimensions,removeViewBox,minifyStyles'",
        "test": "jest",
        "upgrade": "npx sort-package-json && ncu -u",
        "watch": "cross-env NODE_ENV=development webpack --config webpack.config.js --mode development --watch",
        "webpack": "webpack --config webpack.config.js"
    },
    "dependencies": {
        "loaders.css": "^0.1.2",
        "vue": "^2.6.11",
        "vue-global-events": "^1.1.2",
        "yonius": "^0.3.2"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@storybook/addon-knobs": "^5.3.18",
        "@storybook/addon-storysource": "^5.3.18",
        "@storybook/source-loader": "^5.3.18",
        "@storybook/vue": "^5.3.18",
        "@vue/test-utils": "^1.0.2",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^26.0.1",
        "jest": "^26.0.1",
        "jest-serializer-vue": "^2.0.2",
        "regenerator-runtime": "^0.13.5",
        "svgo": "^1.3.2",
        "url-loader": "^4.1.0",
        "uxf-webpack": "^0.5.1",
        "vue-jest": "^3.0.5",
        "vue-template-compiler": "^2.6.11"
    },
    "engines": {
        "node": ">=12"
    },
    "jest": {
        "collectCoverage": false,
        "collectCoverageFrom": [
            "**/*.{js,vue}",
            "!**/node_modules/**"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "snapshotSerializers": [
            "jest-serializer-vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
        }
    }
}
